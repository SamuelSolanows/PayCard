<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".About">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginTop="40sp"
        android:src="@drawable/img1_splash_screen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Welcome to Paycad"
        android:textColor="@color/text_primary"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="I provider essential stuff for your ui desings every tuesday!"
        android:textColor="#919191" />

    <TextView
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/img_arraw_top"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:text=" Send and receive money"
        android:textColor="@color/text_primary"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/img_arraw_top"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:text="Pay bills"
        android:textColor="@color/text_primary"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/img_arraw_top"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:text="Explore exciting offers"
        android:textColor="@color/text_primary"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="Next"
        android:textSize="22sp" />


</LinearLayout>