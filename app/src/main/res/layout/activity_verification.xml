<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Verification">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/baseline_arrow_back_ios_24" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginTop="40sp"
        android:src="@drawable/img1_splash_screen" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello "
            android:textColor="@color/text_primary"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingStart="10dp"
            android:text="Allisson!!!"
            android:textColor="@color/text_primary"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Verify your cellphone entering the 5 digits code"
        android:textColor="#919191" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/txtNum1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/txts"
            android:gravity="center"
            android:hint="7"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/text_primary"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/txtNum2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/txts"
            android:gravity="center"
            android:hint="8"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/text_primary"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/txtNum3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/txts"
            android:gravity="center"
            android:hint="6"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/text_primary"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/txtNum4"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/txts"
            android:gravity="center"
            android:hint="2"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/text_primary"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/txtNum5"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/txts"
            android:gravity="center"
            android:hint="5"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/text_primary"
            android:textSize="30sp" />

    </LinearLayout>


    <Button
        android:id="@+id/btnNext"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Next"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/txtNewcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="Get new code"
        android:textColor="@color/primary"
        android:textSize="22sp" />

</LinearLayout>